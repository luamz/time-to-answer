var element = document.getElementById('submit_<%= @answer.question_id%>');
element.classList.remove('btn-primary');
element.classList.remove('btn-sucess');
element.classList.remove('btn-danger');

if(<%= @answer.correct%>){
    element.classList.add('btn-success')
    $.bootstrapGrowl('Você acertou! \\o/', {
        type: 'success', // (null, 'info', 'danger', 'success')
        align: 'center', // ('left', 'right', or 'center') // Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
        allow_dismiss: true, // If true then will display a cross to close the popup.
        stackup_spacing: 10 // spacing between consecutively stacked growls.
        });
}
else{
    element.classList.add('btn-danger')
    $.bootstrapGrowl('Você errou! :(', {
        type: 'danger', // (null, 'info', 'danger', 'success')
        align: 'center', // ('left', 'right', or 'center')// Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
        allow_dismiss: true, // If true then will display a cross to close the popup.
        stackup_spacing: 10 // spacing between consecutively stacked growls.
        });
}


